<h1>List of games</h1>

<ul id="game-list">
    {{#each games}}
        <li id="game-{{id}}">
            <a href="/games/{{id}}/details">{{name}}</a>

            <form action="/games/{{id}}/updateFeatured" method="POST" style="display:inline;">
                <button type="submit" class="feature-btn">
                    {{#if featured}}Unfeature{{else}}Feature{{/if}}
                </button>
            </form>

            <form action="/games/{{id}}/delete" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </li>
    {{/each}}
</ul>

<a href="/games/new">
    <button>Add game</button>
</a>
