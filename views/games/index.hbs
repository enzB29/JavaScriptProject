<h1>List of Games</h1>

<ul id="game-list">
    {{#each games}}
        <li id="game-{{id}}">
            <a href="/games/{{id}}/details">{{name}}</a>
            <form action="/games/{{id}}/delete" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </li>
    {{/each}}
</ul>

<a href="/games/new">
    <button>Add Game</button>
</a>
